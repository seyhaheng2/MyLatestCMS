= render "slider"
#main_below_promos.ad
  %div{"data-ns" => "billboard", :style => "padding-top:6px;"}
%section#news.news
  .wrap
    .row
      .news-col.d-col-8.w-col-8
        .category-bar
          %span.news-view-switcher
            %span.headline{"data-view-style" => "view-headline", :title => "Switch to Headline View"}
            %span.tile{"data-view-style" => "view-tile", :title => "Switch to Tile View"}
            %span.normal{"data-view-style" => "view-normal", :title => "Switch to List View"}
          %h2.category-bar-title.toggle{"data-toggle" => "category-filters"}
            Categories
          %ul#category-filters.category-bar-filters
            %li
              - @subcategories.each do |sub|
                = link_to sub.name, subcategory_path(sub)
        #news-content.news-list#posts
          = render @posts
        -# .news-load-more#posts
        -#   #ajax-appendContentPage.more-button
        -#     Scroll Down
        -#     %span.fa.fa-down
        = will_paginate @posts
      = render 'sidebar'
.footer-banner.footer-banner-ads
  .wrap
    %span.footer-banner-advertising
      %div{"data-ns" => "leaderboard"}
%footer#footer.footer
  .footer-bot
    .wrap
      .row
        .footer-copyright.t-col-11
          %ul.footer-copyright-links
            %li
              %a{:href => "dmca/index.html"}
                DMCA
                %span Policy
            %li
              %a{:href => "terms/index.html"} Terms of Use
            %li
              %a{:href => "privacy/index.html"}
                Privacy
                %span Statement
          %p.footer-copyright-text
