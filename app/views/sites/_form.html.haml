= form_for @site do |f|
  - if @site.errors.any?
    #error_explanation
      %h2= "#{pluralize(@site.errors.count, "error")} prohibited this site from being saved:"
      %ul
        - @site.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :facebook
    = f.text_field :facebook
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :google
    = f.text_field :google
  .field
    = f.label :ads1
    = f.text_area :ads1
  .field
    = f.label :ads2
    = f.text_area :ads2
  .field
    = f.label :ads3
    = f.text_area :ads3
  .field
    = f.label :ads4
    = f.text_area :ads4
  .actions
    = f.submit 'Save'
